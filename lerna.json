{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "changelogPreset": {
      "name": "conventionalcommits",
      "issueUrlFormat": "blub/{{id}}"
    },
    "version": {
      "message": "chore(release): publish [skip ci]"
    }
  }
}
