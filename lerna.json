{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "message": "chore(release): publish [skip ci]",
      "conventionalCommits": true,
      "changelogPreset": {
        "name": "conventional-changelog-conventionalchangelog",
        "issueUrlFormat": "myBugTracker.com/{id}"
      }
    }
  }
}
