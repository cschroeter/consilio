{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "changelogPreset": {
      "name": "conventionalchangelog",
      "issuePrefixes": ["TEST-"],
      "issueUrlFormat": "myBugTracker.com/{prefix}{id}"
    },
    "version": {
      "message": "chore(release): publish [skip ci]"
    }
  }
}
